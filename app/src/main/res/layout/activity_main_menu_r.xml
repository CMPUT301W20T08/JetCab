<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_MainMenuR"
    android:background="#f5f5f4"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Rider's Main Menu"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/logout_r_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/logout" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_bg"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp">

            <Button
                android:id="@+id/postrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="Post Requests"
                android:textStyle="bold"
                android:background="#00000000"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rounded_bg"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="6dp">

            <Button
                android:id="@+id/current_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="My Current Requests"
                android:textStyle="bold"
                android:background="#00000000"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_bg"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp">

            <Button
                android:id="@+id/past_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="75dp"
                android:text="Past Requests"
                android:background="#00000000"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rounded_bg"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="6dp">

            <Button
                android:id="@+id/profileR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="My Profile"
                android:textStyle="bold"
                android:background="#00000000"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>